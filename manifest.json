{
	"manifest_version": 3,
	"name": "Metadata Wizard",
	"version": "1.0.0",
	"description": "Chrome extension to intercept and override REST API calls with JSON editor",
	"permissions": [
		"webRequest",
		"declarativeNetRequest",
		"declarativeNetRequestWithHostAccess",
		"storage",
		"activeTab",
		"tabs",
		"scripting"
	],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content-script.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"icons": {
		"128": "icons/network_wizard_icon_128.png"
	}
}
